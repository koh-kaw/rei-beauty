    <section class="hero-home align-items-center gradient-overlay d-flex" style="background-image:url(<%= asset_pack_path 'media/images/background.jpg' %>); background-size: cover" ></div>
      <div class="container py-6 py-md-7 text-white z-index-20">
        <div class="row">
          <div class="col-xl-10">

            <div class="text-center text-lg-start">
