    <section class="py-6"> 
      <div class="container">
        <div class="row mb-5">
          <div class="col-md-8">
            <p class="subtitle text-secondary">RANKING        </p>
            <h2>人気のビューティシャン</h2>
          </div>
          <div class="col-md-4 d-lg-flex align-items-center justify-content-end"><a class="text-muted text-sm" href="/rankings/index">
               一覧で表示<i class="fas fa-angle-double-right ms-2"></i></a></div>
        </div>
        <!-- Slider main container-->
        <div class="swiper-container swiper-container-mx-negative swiper-init pt-3" data-swiper="{&quot;slidesPerView&quot;:4,&quot;spaceBetween&quot;:20,&quot;roundLengths&quot;:true,&quot;breakpoints&quot;:{&quot;1200&quot;:{&quot;slidesPerView&quot;:3},&quot;991&quot;:{&quot;slidesPerView&quot;:2},&quot;565&quot;:{&quot;slidesPerView&quot;:1}},&quot;pagination&quot;:{&quot;el&quot;:&quot;.swiper-pagination&quot;,&quot;clickable&quot;:true,&quot;dynamicBullets&quot;:true}}">
          <!-- Additional required wrapper-->
          <div class="swiper-wrapper pb-5">
            

            <% @business_users.each do |buser| %>
            <!-- Slides-->
            <div class="swiper-slide h-auto px-2">
              <!-- place item-->
              <div class="w-100 h-100 hover-animate" data-marker-id="59c0c8e33b1527bfe2abaf92">
                <div class="card h-100 border-0 shadow">
                  <div class="card-img-top overflow-hidden gradient-overlay"> 
                    <% if buser.image.url.nil? %>
                      <%= image_pack_tag "default_user_image.png", :class => "img-fluid" %><a class="tile-link" href="/business_users/<%= buser.id %>"></a>
                    <% else %>
                      <%= image_tag buser.image.url, :class => "img-fluid" %><a class="tile-link" href="/business_users/<%= buser.id %>"></a>
                    <% end %>

                    <div class="card-img-overlay-bottom z-index-20">
                      <div class="d-flex text-white text-sm align-items-center">
                        <% if buser.image.url.nil? %>
                          <%= image_pack_tag "default_user_image.png", :class => "avatar avatar-border-white flex-shrink-0 me-2" %>
                        <% else %>
                          <%= image_tag buser.image.url, :class => "avatar avatar-border-white flex-shrink-0 me-2" %>
                        <% end %>

                        <div><%= buser.name %></div>
                      </div>
                    </div>

                  </div>

                  <div class="card-body d-flex align-items-center">
                    <div class="w-100">
                      <h6 class="card-title"><a class="text-decoration-none text-dark" href="/business_users/<%= buser.id %>"><%= buser.name %></a></h6>
                      <div class="d-flex card-subtitle mb-3">
                        
                        <% @average = 0 %>
                        <% buser.reviews.each do |review| %>
                          <% @average += (review.rate / buser.reviews.count) %>
                        <% end %>
                        <p class="card-text text-muted"><span class="h4 text-primary">⭐️</span><%= @average %></p>
                        </p>
                        
                      </div>
                      <p class="flex-grow-1 mb-0 text-muted text-sm"><%= buser.self_introduction %></p>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <% end %>

          </div>
          <!-- If we need pagination-->
          <div class="swiper-pagination"></div>
        </div>
      </div>
    </section>


