                    </div>
                  </div>

                  <div class="col-lg-3 d-flex align-items-center form-group no-divider">
                    <%= f.collection_select(:category_ids, Category.all, :id, :name, {prompt: "カテゴリ"}, {class: "selectpicker"}) do |category| %> 
                      <%= category.label class: "form-label text-muted" do %>
                        <%= category.text %>
                      <% end %>
                    <% end %>
                  </div>

                  <div class="col-lg-2 d-grid">
                    <%= f.submit "検索 🔍", class:"btn btn-primary text-secondary rounded-pill h-100" %>
                    <% end %>
