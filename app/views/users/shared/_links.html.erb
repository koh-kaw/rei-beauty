<%- if controller_name != 'sessions' %>
  <%= link_to "ログイン", new_session_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "ユーザー登録", new_registration_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "パスワード再設定", new_password_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "確認メールを再送信", new_confirmation_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "確認メールが届きませんでしたか?", new_unlock_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  
    <%= button_to user_google_oauth2_omniauth_authorize_path, {class: "btn btn btn-outline-muted btn-social"} do %>
      <i class="fa-2x fa-google fab btn-social-icon"> </i> <span class="d-none d-sm-inline">Googleアカウントでログイン</span>
    <% end %>

    <%= button_to user_line_omniauth_authorize_path, {method: :post, class: "btn btn btn-outline-primary btn-social"} do %>
      <i class="fa-2x fa-line fab btn-social-icon"> </i> <span class="d-none d-sm-inline">LINEアカウントでログイン</span>
    <% end %>
<% end %>